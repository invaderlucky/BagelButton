<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#d80b5c77"
    tools:context="bagelbudy.diamondhacks.csc.ncsu.edu.com.bagelbuddy.ThirdActivity">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="#d3000414"
        android:id="@+id/frameLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true">

        <TextView
            android:layout_width="382dp"
            android:layout_height="118dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Please rate your bagel"
            android:id="@+id/textViewRate"
            android:layout_gravity="center_horizontal|top"
            android:textAlignment="center"
            android:textColor="#ff00ebff"
            android:textSize="35dp"
            android:gravity="center" />

        <Button
            android:layout_width="298dp"
            android:layout_height="69dp"
            android:text="Add to Favorites"
            android:id="@+id/favButton"
            android:layout_gravity="center_horizontal|bottom"
            android:textSize="30sp"
            android:textColor="#ff050331"
            android:background="#ff3ed0ff"
            android:gravity="center" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar"
            android:layout_gravity="center_horizontal|top"
            android:clickable="true"
            android:numStars="5"
            android:rating="0"
            android:stepSize="1.0"
            android:paddingTop="100dp" />

        <TextView
            android:layout_width="337dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Please enter a name for your bagel"
            android:id="@+id/textViewName"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="35dp"
            android:textColor="#ff00ebff"
            android:paddingBottom="50dp" />

        <EditText
            android:id="@+id/textBagelName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_gravity="center"
            android:gravity="center"
            android:editable="true"
            android:selectAllOnFocus="false"
            android:textColor="#ff00ebff"
            android:textSize="25dp"
            android:paddingTop="150dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/successMsg"
            android:textColor="#ff00ebff"
            android:textAlignment="center"
            android:textSize="30dp"
            android:gravity="center_horizontal"
            android:textStyle="italic"
            android:layout_gravity="center"
            android:paddingTop="250dp" />

    </FrameLayout>
</RelativeLayout>
