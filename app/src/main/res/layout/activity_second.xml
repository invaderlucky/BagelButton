<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#d80b5c77"
    tools:context="bagelbudy.diamondhacks.csc.ncsu.edu.com.bagelbuddy.SecondActivity">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#d3000414"
        android:id="@+id/frameLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textViewBagel"
            android:layout_gravity="center_horizontal|top"
            android:textColor="#ff00ebff"
            android:textAlignment="center"
            android:textSize="30dp" />

        <Button
            android:layout_width="104dp"
            android:layout_height="76dp"
            android:text="Yes"
            android:id="@+id/buttonYes"
            android:layout_gravity="left|bottom"
            android:background="#ff3ed0ff"
            android:backgroundTintMode="src_over"
            android:capitalize="sentences"
            android:enabled="false"
            android:textColor="#ff050331"
            android:textSize="30sp"
            android:clickable="true"
            android:onClick="sendMessageYes"
            android:elegantTextHeight="false"
            style="?android:attr/borderlessButtonStyle" />

        <Button
            android:layout_width="104dp"
            android:layout_height="76dp"
            android:text="No"
            android:id="@+id/buttonNo"
            android:layout_gravity="right|bottom"
            android:background="#ff3ed0ff"
            android:backgroundTintMode="src_over"
            android:capitalize="sentences"
            android:enabled="false"
            android:textColor="#ff050331"
            android:textSize="30sp"
            android:clickable="true"
            android:onClick="sendMessageNo"
            android:elegantTextHeight="false"
            style="?android:attr/borderlessButtonStyle" />

        <TextView
            android:layout_width="250dp"
            android:layout_height="193dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Are you happy with this bagel?"
            android:id="@+id/textViewQuestion"
            android:layout_gravity="center_horizontal|bottom"
            android:textAlignment="center"
            android:textColor="#ff00ebff"
            android:textSize="35dp" />

        <ImageView
            android:layout_width="160dp"
            android:layout_height="241dp"
            android:id="@+id/imageView"
            android:layout_gravity="center"
            android:src="@mipmap/asiagoparm" />

    </FrameLayout>
</RelativeLayout>
