<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#d80b5c77">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#d3000414">

        <Button
            android:layout_width="225dp"
            android:layout_height="76dp"
            android:text="Get a bagel!"
            android:id="@+id/myButton"
            android:layout_gravity="center_horizontal|bottom"
            android:background="#ff3ed0ff"
            android:backgroundTintMode="src_over"
            android:textColor="#ff050331"
            android:textSize="30sp"
            android:elegantTextHeight="false"
            android:onClick="showBagel" />

        <TextView
            android:layout_width="208dp"
            android:layout_height="93dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Welcome to Bagel Buddy!"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal|top"
            android:textAlignment="center"
            android:textColor="#ff00ebff"
            android:textSize="35dp" />

    </FrameLayout>
</RelativeLayout>
